<h1>Tweeter</h1>


<ul>
    <% @tweets.each do |tweet| %>
        <li>
            <strong><%= link_to tweet.handle, tweet_path(tweet) %></strong> - <%= tweet.content %> | <%= link_to "Edit this tweet!", edit_tweet_path(tweet) %>
        </li>
    <% end %>
</ul>

<%= link_to "New Tweet!", tweets_new_path %>
